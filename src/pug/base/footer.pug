      form.form(action="#" method="post")
        .form__item.mb-3.mb-md-4
          .h5.mb-2 Ваше имя
          input.form__field.form__field_bg_brand(type="text" value="" placeholder="Имя Фамилия")
        .form__item.mb-4
          .h5.mb-2 Ваш телефон *
          input.form__field.form__field_bg_brand(type="text" value="" name="phone" placeholder="+7 (___) ___-__-__" required)
